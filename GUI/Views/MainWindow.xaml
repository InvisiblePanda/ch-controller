<Window x:Class="GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="100">
    <StackPanel>
        <Button Content="{Binding AutoFireCaption}" Height="50" Command="{Binding AutoFireCmd}"/>
        <Button Content="{Binding IdleCaption}" Height="50" Command="{Binding IdleCmd}"/>
        <Button Content="Ascend" Height="50" Command="{Binding AscendCmd}"/>
    </StackPanel>
</Window>